{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "proseWrap": "preserve",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": "*.mdx",
      "options": {
        "printWidth": 50,
        "proseWrap": "preserve",
        "embeddedLanguageFormatting": "off",
        "singleQuote": false,
        "jsxSingleQuote": false,
        "htmlWhitespaceSensitivity": "strict",
        "bracketSameLine": false,
        "jsxBracketSameLine": false
      }
    }
  ]
}
